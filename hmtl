<body>

<div id="envelope" onclick="openEnvelope()">
  <div id="flap"></div>
  <div id="content">
    <p>Your love letter content goes here...</p>
    <div id="flower" class="animate-flower"></div>
  </div>
</div>

<script>
  function openEnvelope() {
    var flap = document.getElementById('flap');
    var content = document.getElementById('content');

    flap.style.transform = 'rotateY(0deg)';
    content.style.opacity = '1';
  }
</script>

